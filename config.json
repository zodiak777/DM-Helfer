{
  "logging": {
    "log_dir": "./logs",
    "log_level": "INFO"
  },
  "data_paths": {
    "prompt_data": "./data/prompt_data.json"
  },
  "openai": {
    "model": "gpt-5",
    "max_tokens": 1024
  },
  "discord": {
